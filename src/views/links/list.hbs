<div class="container p-4">
    <div class="row">
        {{!--Por cada link crea un div con la respectiva informacion del link--}}
        {{#each links}}
            <div class = "col-md-3">
                <div class = "card text-center">
                    <div class="card-body">
                        
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Cancelar Cita</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar cita</a>
                    </div>
                </div>
            </div>
        {{!--En caso de que no se encuentren citas agendadas, se muestra un mensaje de que no hay citas agendadas--}}
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay citas agendadas.</p>
                    <a href="/links/add">Agenda Una!</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>